{% extends 'base.html.twig' %}

{% block title %}Hello AccountPageController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			display: flex;
			flex-direction: column;
			align-items: center;
		}
		.example-wrapper p {
			align-self: start;
			margin-left: 10px;

		}
		.example-wrapper span {
			align-self: end;
			margin-right: 10px;
			margin-top: 20px;
		}
		.Resas {
			max-width: 90vw;
			overflow-x: scroll;
		}
		.Resas tr td:nth-child(1),
		.Resas tr th:nth-child(1) {
			width: 12ch;
		}
		.Resas tr td:nth-child(2),
		.Resas tr th:nth-child(2) {
			width: 6ch;
		}
		.Resas tr td:nth-child(3),
		.Resas tr th:nth-child(3) {
			width: 8ch;
		}
		table {
			text-align: center;

		}
		tr:nth-child(2n) > td:nth-child(2n) {
			background: #B6AC97
		}
		tr:nth-child(2n+1) > td:nth-child(2n + 1) {
			background: #B6AC97
		}
		th:nth-child(2n + 1) {
			background: #B6AC97
		}
		button {
			cursor: pointer;
			background: inherit;
			border: none;
		}
		td,
		th {
			max-width: 20vw;
			overflow-x: auto;

		}
		.emailTab {
			max-width: 70vw;
		}
		table,
		th,
		td {
			border: 1px solid black;
			border-collapse: collapse;
			padding: 5px;
		}
	</style>

	<div class="example-wrapper">
		<p>Bienvenue sur votre gestionnaire de compte</p>
		<h1>
			Info Personnel
		</h1>
		<table>
			<tr>
				<td>
					Email
				</td>
				<td class='emailTab'>{{ info[0].getEmail() }}
				</td>
				<td></td>
			</tr>
			<tr>
				<td>
					Nom des reservation par default
				</td>
				<td>{{ info[0].getReservationName() }}</td>
				<td>
					<button>
						Modifier</button>
				</td>
			</tr>
			<tr>
				<td>
					N° de téléphone
				</td>
				<td>{{ info[0].getNumeroTel() }}</td>
				<td>
					<button>
						Modifier</button>
				</td>
			</tr>
			<tr>
				<td>
					Nombre de couvert par default
				</td>
				<td>{{ info[0].getCouvertDefault() }}</td>
				<td>
					<button>
						Modifier</button>
				</td>
			</tr>
			<tr>
				<td>
					Allergènes
				</td>
				<td>{{ info[0].getAllergene() }}</td>
				<td>
					<button>Modifier</button>
				</td>
			</tr>
		</table>
		<h1>
			Mes reservation
		</h1>
		<table class="Resas">
			<tr>
				<th>Date</th>
				<th>Heure</th>
				<th>Couvert</th>
				<th>Allergènes</th>
				<th>Commentaires</th>
				<th>Action</th>
			</tr>
			<tr>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td>
					<button>Annuler</button>
				</td>
			</tr>
			<tr>
				<td>12 dec 2021</td>
				<td>11h30</td>
				<td>12</td>
				<td>aaaaaaaaaaaaa aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa aaaaaaaaaaaaaaaaaaaaaaaa aaaaaaaaaaaaaaa aaaaaaaaaaaaaaaaaaa aaaaaaaaaaaaaa
				</td>
				<td>aaaaaaaaaa aaaaaaaaaaaaaaa aaaaaaaaaaaaaa aaaaaaaaaaaaa aaaaaaaaa aaaaaaaaaaaaaaaaaaaaaaaaa aaaaaaaaaaaaaaaaa aaaaaaaaaaaaaaaaaaa aaaaaaaaaaaaaaa</td>
				<td>
					<button>Annuler</button>
				</td>
			</tr>
		</table>
		<span>*Possibilité d’annuler une reservation jusqu’à 8h avant l’heure.
		</span>
	</div>
{% endblock %}
{% use "nav.html.twig" %}
{% use "footer.html.twig"%}
